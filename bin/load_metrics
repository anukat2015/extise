#!/usr/bin/env ruby
require_relative 'common' and load_extise! { include Extisimo }

m, c, s, t, v, q, p = nil, true, false, 80, true, false, []

ARGV.bind_and_parse! to: :locals do
  use '[<options>] [<path>...]'
  opt 'm    --module=<name>'
  opt 'c -c --[no-]color'
  opt 's -s --[no-]sort'
  opt 't -t --trim[=<length:Integer>]'
  opt 'v -v --[no-]verbose'
  opt 'q -q --quiet'
  arg 'p [<path>...]'
end

if p.empty?
  m ||= 'Extric'
  p = Dir[File.expand_path "../../lib/extric/{#{Metric::TARGETS.map(&:pluralize) * ','}}/*.rb", __FILE__]
end

AutoColor.disable on: self unless c

p.map { |f| File.absolute_path f }.each do |f|
  target, name, _, type, _ = Extric.resolve_metric! file: f, prefix: m rescue abort $!
  metric = persist(Metric, target: target, name: name) { |r| r.file, r.type = f, type }

  dump_record metric, :metric
end
